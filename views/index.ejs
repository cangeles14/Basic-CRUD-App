<% include ./partials/header %>
    
    <div class="container text-center" style="margin-top: 6rem">
      <h1>Employee Database</h1>
    
    <div class="container mt-3">
      <form class="form-inline justify-content-center">
        <input class="form-control mr-sm-2" type="search" placeholder="Search Employee" aria-label="Search" id="search">
        <button class="btn btn-outline-success my-2 my-sm-0">Refresh</button>
      </form>
    </div>
    
    </div>
    
    
    <div class="container mb-5 mt-5 table-responsive">
      <table class="table table-striped" id="table">
        <thead>
          <tr>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Email</th>
            <th scope="col">Department</th>
            <th scope="col">Hired Before 2015</th>
            <th scope="col">More Info</th>
          </tr>
        </thead>
        <tbody>
          <% item.forEach(function(item){ %>
            <tr>
              <td> <%= item.firstName %> </td>
              <td> <%= item.lastName %> </td>
              <td> <%= item.email %> </td>
              <td> <%= item.department %> </td>
              <td> <%= item.hiredBefore %> </td>
              <td> <a class="btn btn-outline-primary my-2 my-sm-0" href="/items/<%= item._id %>" role="button">Info</a> </td>
            </tr>
          <% }) %>
        </tbody>
    </table>
  </div>

<% include ./partials/footer %>